<div class="container-fluid">
    <p id="notice"><%= notice %></p>
    <div class="row">
        <div class="col">
            <div class="text-center">
                <%= will_paginate @users, list_classes: %w(pagination justify-content-center) %>
            </div>
            <% @users.each do |user| %>
                <%= link_to user, class: "users-index-item mt-2 mb-2 " do %>
                    <div class="user-left">
                        <img src="<%= "/user_images/#{user.image_name}" %>" class="mr-3">
                    </div>
                    <div class="user-right">
                        <h6 class="mb-2"><%= user.name %></h6>
                    </div>
                <% end %>
            <% end %>

        </div>
    </div>
</div>