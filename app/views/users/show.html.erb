<div class="user-show col bg-light mx-auto text-center" style="width:500px; min-height:450px;">
    <div class="user">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
    </div>
    <p>
        <strong>ユーザー名</strong>
        <%= @user.name %>
    </p>
    <p>
        <strong>メールアドレス</strong>
        <%= simple_format(@user.email) %>
        <div>
            <P>登録日時</p>
            <%= @user.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %>
        </div>
        <%= link_to "ページへ行く", blogs_path(user: @user.id) ,class: "btn btn-outline-primary m-2" %>
    </p>
    <% if @user.id == @current_user.id %>
        <%= link_to '再編集', edit_user_path, class: "btn btn-outline-primary m-2" %>
        <%= link_to '削除', @user, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger" %>
    <br>
    <% end %>
    <%= link_to '一覧へ戻る', users_path %>
</div>