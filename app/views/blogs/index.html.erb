<% if notice == "他のユーザーです" %>
    <p id="notice" class="col bg-danger text-center py-2"><%= notice %></p>
<% elsif notice %>
    <p id="notice" class="col bg-success text-center py-2"><%= notice %></p>
<% end %>
<div class="container-fluid">
  <div class="row blogs">
    <%= render "blogs/sidemenu" %>
    <div class="col p-2" id="main">
      <%= will_paginate @blogs, list_classes: %w(pagination justify-content-center) %>
      <ul>
        <% @blogs.each do |blog| %>
          <li>
            <div class="card mb-2 mt-2">
              <div class="card-body">
                <h5 class="card-title"><%= blog.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></h5>
                <h6 class="card-subtitle text-muted"><%= link_to blog.title, blog ,class: "btn btn-outline-warning", remote: true %></h6>
                <p class="card-text"><%= truncate(blog.content, length:40, omission: '…') %></p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <%= will_paginate @blogs, list_classes: %w(pagination justify-content-center) %>
    </div>
    <div class="col-xs-12 col-sm-4 p-2">
      <%= month_calendar events: @new_blogs do |date, blogs| %>
        <%= date.day %>
        <% blogs.each do |blog| %>
          <div>
            <%= link_to "UP!", blog, class: "btn btn-outline-warning px-1 py-0", remote: true %>
          </div>
        <% end %>
      <% end %>
      <div id="user_memo">
        <% if @memo %>
          <%= form_tag(memo_path(@memo), method: :put ) do %>
            <div class="field m-2" >
              <textarea name="memo" class="form-control", rows="10">メモ済み<%= @memo.content %></textarea>
            </div>
            <div class="actions m-2">
              <input type="submit" value="保存" class="btn btn-primary">
            </div>
          <% end %>
        <% else %>
          <%= form_tag(memos_path, method: :post ) do %>
            <div class="field m-2" >
              <textarea name="memo" class="form-control", rows="10">新規</textarea>
            </div>
            <div class="actions m-2">
              <input type="submit" value="保存" class="btn btn-primary">
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


