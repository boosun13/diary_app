<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= simple_format(@blog.content) %>
  <br>
  <div>
    <div>
      <P>更新日時</p>
      <%= @blog.updated_at %>
    </div>
    <div>
      <P>作成日時</p>
      <%= @blog.created_at %>
    </div>
  </div>
</p>

<%= link_to '再編集', edit_blog_path(@blog), class: "btn btn-outline-primary m-2" %>
<%= link_to '削除', @blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
<br>
<%= link_to '一覧へ戻る', blogs_path %>
