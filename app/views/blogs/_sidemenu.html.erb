<div class="col-xs-12 col-sm-3 bg-light">

  <h4>最新投稿一覧</h4>
  <ul>
    <% @new_blogs.first(5).each do |new_user_blog| %>
      <li>
        <%= new_user_blog.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %>
        <br>
        <%= link_to(new_user_blog.title, "/blogs/#{new_user_blog.id}", class: "btn btn-outline-warning", remote: true) %>
      </li>
    <% end %>
  </ul>
</div>

