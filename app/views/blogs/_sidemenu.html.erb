<div class="bg-light m-2">
  <p id="notice"><%= notice %></p>

  <h1>最新5件</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%= link_to '新規追加', new_blog_path, class: "btn btn-light",remote: true %>

    <ul>
      <% @blogs.last(5).each do |blog| %>
        <li>
          <%= blog.created_at %>
          <br>
          <%= link_to(blog.title, "/blogs/#{blog.id}",remote: true) %>
        </li>
      <% end %>
    </ul>
  </table>
</div>

