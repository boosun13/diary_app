<%= form_with(model: blog, remote: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field ml-2 mr-2">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control col-sm-5" %>
  </div>

  <div class="field m-2" >
    <%= form.label :content %>
    <%= form.text_area :content, class:"form-control", rows:"10" %>
  </div>

  <div class="field m-2" >
    <label><%= form.radio_button :range, "0" %> 非公開 </label>
    <%= form.radio_button :range, 3 %>
    <%= form.label :range, "公開", {value: 3, style: "display: inline-block;"} %>
  </div>

  <div class="actions m-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
